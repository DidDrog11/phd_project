	note = {\_eprint: https://besjournals.onlinelibrary.wiley.com/doi/pdf/10.1111/1365-2664.13016},
	keywords = {rodents, crop damage, agricultural intensification, biological weed control, ecosystem functioning, ecosystem services, edge effect, Microtus arvalis, organic farming, seed predation},
