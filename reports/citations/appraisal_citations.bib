@article{albery_fast-lived_2021,
	title = {Fast-lived {Hosts} and {Zoonotic} {Risk}},
	volume = {37},
	issn = {1471-4922},
	url = {https://www.sciencedirect.com/science/article/pii/S147149222030297X},
