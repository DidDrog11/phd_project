@article{ostfeld_biodiversity_2000,
	title = {Biodiversity and {Disease} {Risk}: the {Case} of {Lyme} {Disease}},
	volume = {14},
	issn = {1523-1739},
	shorttitle = {Biodiversity and {Disease} {Risk}},
