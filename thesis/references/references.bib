	note = {Publisher: Environmental Health Perspectives},
	keywords = {anthropogenic disturbance, climate change, infectious diseases, reservoir, vector, vector-borne disease, wildlife, zoonotic disease},
	file = {Full Text PDF:C\:\\Users\\ucbtds4\\Zotero\\storage\\NVS2LLWZ\\Mills et al. - 2010 - Potential Influence of Climate Change on Vector-Bo.pdf:application/pdf},
